<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_one_frag"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_background">

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:background="@color/cardview_light_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:id="@+id/first_line">

        <CheckBox
            android:id="@+id/income_checked"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textSize="25sp"
            android:textColor="@color/design_default_color_secondary_variant"
            android:text="收入" />

        <CheckBox
            android:id="@+id/expend_checked"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/design_default_color_secondary_variant"
            android:text="支出" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/second_line"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_secondary_variant"
            android:layout_marginLeft="40dp"
            android:textSize="30sp"
            android:text="金额：" />
        <EditText
            android:id="@+id/eidt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="请输入金额"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/third_line"
        app:layout_constraintTop_toBottomOf="@id/second_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_secondary_variant"
            android:layout_marginLeft="40dp"
            android:textSize="30sp"
            android:text="类型：" />
        <EditText
            android:id="@+id/eidt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入类型"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fourth_line"
        app:layout_constraintTop_toBottomOf="@id/third_line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/design_default_color_secondary_variant"
            android:layout_marginLeft="40dp"
            android:text="备注："
            android:textSize="30sp" />

        <EditText
            android:id="@+id/eidt_remark"
            android:layout_width="158dp"
            android:layout_height="180dp"
            android:hint="请输入备注"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fourth_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finish_add"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/teal_700"
            android:text="完成"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>